// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-j": "vim::MenuSelectNext",
      "ctrl-k": "vim::MenuSelectPrevious",
    },
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      // Search
      "space f f": "file_finder::Toggle",
      "space s s": "outline::Toggle",
      "space o": "file_finder::Toggle",
      "space f c": "command_palette::Toggle",
      "space s c": "command_palette::Toggle",
      "space ,": "tab_switcher::ToggleAll",
      "ctrl-\\": "terminal_panel::Toggle",
      "ctrl-`": "theme_selector::Toggle",
      "g r": "editor::FindAllReferences",
      "ctrl-p": "pane::ActivatePreviousItem",
      "ctrl-n": "pane::ActivateNextItem",

      "cmd-shift-h": "workspace::ToggleLeftDock",
      "space |": "workspace::NewFileSplitVertical",
      "space =": "workspace::NewFileSplitHorizontal",
      "space q": "pane::CloseActiveItem",
      "ctrl-s": "workspace::Save",
      "cmd-s": "workspace::Save",

      // Navigation
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "alt-space": "file_finder::Toggle",
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "alt-space": "editor::ShowCompletions",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-\\": "terminal_panel::Toggle",
    },
  },
]
