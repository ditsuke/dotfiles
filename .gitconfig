[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = nvim
	autocrlf = input
	eol = lf
	pager = less
[credential]
	helper = manager-core
[credential "https://dev.azure.com"]
	useHttpPath = true
[user]
	name = {{ git_name }}
	email = {{ git_email }}
	signingkey = {{ gpg_key_id }}
[gpg]
	program = {{ gpg_binary }}
[commit]
	gpgsign = true
[credential "helperselector"]
	selected = manager-core
[merge]
	conflictStyle = zdiff3
[pager]
	diff = true
[init]
	defaultBranch = main

