# Environment

## ZSH Config Path
#export ZDOTDIR="$HOME/.config/zsh"

## Prefs
export EDITOR="$(which nvim)"
export PAGER=less

## Build
export CC=gcc

## PATH

### Homebrew
HOMEBREW_DIR=/home/linuxbrew/.linuxbrew
PATH="$PATH:${HOMEBREW_DIR}/bin:${HOMEBREW_DIR}/sbin"
#eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"

### Cargo
. "$HOME/.cargo/env"

### Go
GOBIN="$(go env GOBIN)"
GOPATH="$(go env GOPATH)"
PATH="$PATH:${GOBIN:=${GOPATH}/bin}"

### Node/Yarn
YARN_BIN="$(yarn global bin)"
PATH="$PATH:$YARN_BIN"

## Local env
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]
then
    PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi

export PATH

## Jetbrains Toolbox
if ! [[ "$PATH" =~ "$HOME/.local/share/JetBrains/Toolbox/scripts" ]]
then
	PATH="$HOME/.local/share/JetBrains/Toolbox/scripts:$PATH"
fi

## GTK
### Use ibus as the input method module (bid to disable the ctrl-shift-u shortkey)
GTK_IM_MODULE=ibus


